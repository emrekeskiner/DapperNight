@model DapperNight.Dtos.ProductDtos.GetByIdProductDto
@{
    ViewData["Title"] = "Ürün Güncelle";
}

<h3>Ürün Güncelle</h3>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <form method="post">
        @Html.HiddenFor(x=>x.ProductId)
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control mb-2" />
        <label>Kategori</label>
        @Html.DropDownListFor(m => m.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control mb-2" })

        <label>Adet</label>
        <input type="text" asp-for="Stock" class="form-control mb-2" />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control mb-2" />
        <br />
        <button class="btn btn-primary">Güncelle</button>

    </form>
</div>

