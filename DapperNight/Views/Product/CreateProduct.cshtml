@model DapperNight.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "Ürün Oluştur";
}

<h3>Ürün Ekle</h3>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control mb-2" />
        <div class="form-group">
        <label>Kategori</label>
        <select asp-for="CategoryId" class="form-control mb-2">
            <option value="">Kategori Seçiniz</option>
            @foreach (var category in ViewBag.categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger mb-2"></span>
        </div>
        <label>Adet</label>
        <input type="text" asp-for="Stock" class="form-control mb-2" />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control mb-2" />
        <br />
        <button class="btn btn-primary">Kaydet</button>

    </form>
</div>

